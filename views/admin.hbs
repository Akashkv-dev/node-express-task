<table id="table" class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Role</th>
      <th scope="col">Age</th>
      <th scope="col">Email</th>
      <th scope="col">Password</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>

    {{#each users}}
    <tr>

      <th id="number" scope="row">1</th>

      <td>{{this.name}}</td>
      <td>{{this.role}}</td>
      <td>{{this.age}}</td>
      <td>{{this.email}}</td>
      <td>{{this.password}}</td>
      <td><a class="btn btn-outline-warning ms-0" href="/edit/{{this._id}}">Edit</a></td>
      {{!-- <form action="/edit/{{this._id}}" method="get">
      <input type="hidden" name="edit" value="{{this._id}}">
      <td><button class="btn btn-outline-warning ms-0" type="submit">Edit</button></td>
      </form> --}}
      <form action="/delete" method="post">
      <input type="hidden" name="delete" value="{{this._id}}">
      <td><button class="btn btn-outline-danger ms-0" type="submit" onclick="return confirm('Do you want to delete?{{this.name}}')" >Delete</button></td>
      </form>
    </tr>

    {{/each}}

  </tbody>
</table>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Get the table element
    var table = document.getElementById('table'); // Replace 'your-table-id' with the actual ID of your table

    // Counter variable to track the index
    var counter = 1;

    // Loop through each row in the table body
    var rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');
    for (var i = 0; i < rows.length; i++) {
      // Find the 'th' element with the ID 'number' and update its text content
      var numberCell = rows[i].getElementsByTagName('th')[0];
      if (numberCell && numberCell.id === 'number') {
        numberCell.textContent = counter;
        counter++;
      }
    }
  });
</script>
